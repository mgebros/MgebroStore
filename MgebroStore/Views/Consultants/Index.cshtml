@model MgebroStore.Models.Consultant.IndexViewModel

@{
    ViewData["Title"] = "ნუსხა";
}

<h1>კონსულტანტების ნუსხა</h1>

<p>
    <a asp-action="Create">დამატება</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Consultants[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultants[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultants[0].PID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultants[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultants[0].Birthdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultants[0].ReferralName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Consultants) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferralName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">რედაქტირება</a> |
                <a asp-action="Details" asp-route-id="@item.ID">დეტალები</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">წაშლა</a>
            </td>
        </tr>
}
    </tbody>
</table>

@Html.Partial("~/Views/Shared/PaginationPartial.cshtml")
