@model MgebroStore.Models.Consultant.SearchByTotalSalesViewModel

@{
    ViewData["Title"] = "კონსულტანტები";
}

<h2>კონსულტანტები ჯამური გაყიდვების მიხედვით</h2>

<div class="row">
    <div class="col-md-12">
        <form asp-action="SearchByTotalSales" method="get">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">საწყისი თარიღი</label>
                        <input type="date" name="FromDate" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">საბოლოო თარიღი</label>
                        <input type="date" name="ToDate" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">&nbsp;</label>
                        <br />
                        <input type="submit" class="btn btn-primary" value="ძებნა" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].ID)
                @Html.Partial("~/Views/Shared/SortingPartial.cshtml", new SortingModel { Name = "ID" })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].FullName)
                @Html.Partial("~/Views/Shared/SortingPartial.cshtml", new SortingModel { Name = "FullName" })

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].PID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].Birthdate)
                @Html.Partial("~/Views/Shared/SortingPartial.cshtml", new SortingModel { Name = "Birthdate" })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].TotalSales)
                @Html.Partial("~/Views/Shared/SortingPartial.cshtml", new SortingModel { Name = "TotalSales" })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].HierarchicalTotalSales)
                @Html.Partial("~/Views/Shared/SortingPartial.cshtml", new SortingModel { Name = "HierarchicalTotalSales" })
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@Html.ActionLink(@item.ID.ToString(), "Details", "Consultants", new { id = item.ID })</td>
                <td>@item.FullName</td>
                <td>@item.PID</td>
                <td>@item.Birthdate</td>
                <td>@item.TotalSales</td>
                <td>@item.HierarchicalTotalSales</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td>ჯამი</td>
            <td>@Model.TotalSales</td>
            <td>@Model.HierarchicalTotalSales</td>
        </tr>
    </tfoot>
</table>

@Html.Partial("~/Views/Shared/PaginationPartial.cshtml", new ActionControllerPair { Action = "SearchByTotalSales", Controller = "Consultants" })