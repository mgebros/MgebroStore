@model MgebroStore.Models.Sale.SaleDeleteViewModel

@{
    ViewData["Title"] = "გაყიდვები";
}

<h1>წაშლა</h1>

<h3>დარწმუნებული ხართ?</h3>
<div>
    <h4>გაყიდვები</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seller)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seller)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SaleDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SaleDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ID" />
    <input type="submit" value="წაშლა" class="btn btn-danger" />    
</form>
<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.SoldItems[0].Code)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.SoldItems[0].Title)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.SoldItems[0].Price)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.SoldItems[0].Quantity)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SoldItems)
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.Title</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index">დაბრუნება</a>

